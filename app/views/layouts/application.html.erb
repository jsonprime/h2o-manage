<!DOCTYPE html>
<html>
<head>
  <title>H2oManage</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if user_signed_in? %>
  <p>Hello, <%= current_user.email %> - <%= link_to "Sign out", destroy_user_session_path, :method => 'delete' %></p>
  <% else %>
  <p>Please <%= link_to "Sign In", new_user_session_path, :method => 'get' %> or <%= link_to "Sign Up", new_user_registration_path, :method => 'get' %></p>
  <% end %>
<%= yield %>

</body>
</html>
